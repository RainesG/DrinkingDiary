/* components/drinking-entry/drinking-entry.wxss */
.drinking-entry {
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.entry-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.entry-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.entry-form {
  margin-bottom: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.picker {
  flex: 1;
  padding: 10rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 28rpx;
}

input {
  flex: 1;
  padding: 10rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 28rpx;
}

.timestamp {
  flex: 1;
  font-size: 28rpx;
  color: #999;
}

.entry-actions {
  text-align: center;
}

.save-btn {
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 6rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}
